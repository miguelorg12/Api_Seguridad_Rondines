{
  "name": "api_seguridad_rondines",
  "version": "1.0.0",
  "description": "This is an API of logic security",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:qa": "cross-env NODE_ENV=qa nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:prod": "cross-env NODE_ENV=production nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias",
    "build:clean": "rimraf dist && npm run build",
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "typeorm": "ts-node -r tsconfig-paths/register --transpile-only ./node_modules/typeorm/cli.js -d src/configs/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate ./src/utils/migrations/Init --pretty",
    "migrate": "npm run typeorm -- migration:run",
    "migrate:revert": "npm run typeorm -- migration:revert",
    "seed": "ts-node -r tsconfig-paths/register src/utils/seeds/index.ts",
    "postbuild": "echo 'Build completed successfully!'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguelorg12/Api_Seguridad_Rondines.git"
  },
  "author": "Miguel Villalpando",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miguelorg12/Api_Seguridad_Rondines/issues"
  },
  "homepage": "https://github.com/miguelorg12/Api_Seguridad_Rondines#readme",
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^7.0.5",
    "oauth2-server": "^3.1.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/express-validator": "^3.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/oauth2-server": "^3.0.18",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers",
    "@interfaces": "src/interfaces",
    "@services": "src/services",
    "@utils": "src/utils",
    "@configs": "src/configs",
    "@routes": "src/routes",
    "@validators": "src/utils/validators",
    "@entities": "src/interfaces/entity",
    "@dto": "src/interfaces/dto"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
